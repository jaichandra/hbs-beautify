{{!--
/**
 * Base component to display popovers. This component can load html or another partial as content.
 * To load inline content, use component as block partial.
 * See example: comments.hbs
 *
 * @param   {string}  content   Path to a handlebars partial to load a content
 * @example
 * {{#> common/popover}}
 *     {{>common/fe-textarea-vert rows="2" cols="60" label="" placeholder="Enter headline of insight here..."}}
 * {{/ common/popover}}
 */
--}}
<i class="sif sif-delete box-close-button"></i>
{{#if content}}
    {{> (lookup . 'content')}}
{{else}}
    {{> @partial-block }}
{{/if}}
